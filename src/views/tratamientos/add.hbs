<div class="container p-4">
    <div class="row">
        <div class="col-md-4 mx-auto">
            <div class="card">
                <div class="card-body">
                    <form action="/tratamientos/add" method="POST">
                        <div class="form-group">
                            <input type="text" class="form-control" name="nombre_tratamiento" placeholder="Nombre Tratamiento"
                                autofocus>
                        </div>
                        <div class="form-group">
                            <input type="text" class="form-control" name="duracion_tratamiento" placeholder="Duracion">
                        </div>
                        <div class="form-group">
                            <input type="text" class="form-control" name="costo_tratamiento" placeholder="Costo">
                        </div>
                        <div class="form-group">
                            <button class="btn btn-success btn-block">
                                Guardar
                            </button>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>